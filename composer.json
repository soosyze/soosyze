{
    "name": "soosyze/soosyze",
    "type": "cms",
    "homepage": "https://soosyze.com",
    "description": "Soosyze CMS is a minimalist content management system in PHP, without database to create and manage your website easily.",
    "version": "1.0.0-beta2.1",
    "keywords": ["cms", "php", "framework", "flat-file", "micro", "json", "website", "soosyze", "nosql", "responsive", "mvc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu NOËL",
            "homepage": "https://mathieu-noel.fr",
            "role": "Lead developer"
        }
    ],
    "support": {
        "issues": "https://github.com/soosyze/soosyze/issues",
        "forum": "https://community.soosyze.com",
        "source": "https://github.com/soosyze/soosyze",
        "docs": "https://github.com/soosyze/documentations",
        "chat": "https://discord.gg/parFfTt"
    },
    "require": {
        "php": ">=5.4",
        "ircmaxell/password-compat": "1.0.*",
        "soosyze/framework": "~2.1",
        "soosyze/queryflatfile": "~1.2",
        "paragonie/random_compat": "<9.99"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*"
    },
    "suggest": {
        "friendsofphp/php-cs-fixer": "Pour normaliser le code PHP.",
        "phpdocumentor/phpdocumentor": "Pour générer la documentation des services."
    },
    "autoload": {
        "classmap": [
            "core/modules/", 
            "app/modules/"
        ],
        "files": ["vendor/ircmaxell/password-compat/lib/password.php"]
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true
    }
}
